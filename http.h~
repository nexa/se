#ifndef _HTTP_H_
#define _HTTP_H_

typedef struct _t_hdr_node;
struct _t_http;

/* node runtines
 */
typedef int (*FUNC)();

/* node state
 */
enum HDR_NODE_STATE
  {
    IGNORING = -1,
    MATCHING = 0,
    PENDING = 1,
    MATCHED = 2,
  };

/* node type
 */
enum HDR_NODE_TYPE
  {
    ROOT = 0,
    ENTITIYPATH,
    ENTITIY,
  };

typedef struct _t_hdr_node
{
  char *body;
  int blen;
  
}hdr_node;

#endif
